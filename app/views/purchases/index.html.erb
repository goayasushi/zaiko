<%= render "shared/header" %>

<div class="wrapper">
  <div class="side-bar">
    <%= render "shared/side-bar" %>
  </div>
  <div class="main">
    <%# 選択項目毎の表示 %>
    <div class="main-title">入荷一覧</div>
    <div class="main-content">
      <table>
        <tr>
          <th>入荷コード</th>
          <th>入荷日</th>
          <th>部品名</th>
          <th>仕入先名</th>
          <th>仕入単価(税抜)</th>
          <th>仕入数</th>
        </tr>
        <% @purchases.each do |purchase| %>
          <tr>
            <td><%=  link_to purchase.id, "#", class: "purchase-id" %></td>
            <td><%= purchase.arrival_day %></td>
            <td><%= purchase.part.part_name %></td>
            <td><%= purchase.part.client.client_name %></td>
            <td><%= purchase.part.purchase_price %></td>
            <td><%= purchase.purchase_quantity %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>